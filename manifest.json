{
  "manifest_version": 3,
  "name": "AI Assistant Extension",
  "version": "1.0",
  "description": "A Chrome extension using Gemini 2.0 Flash AI",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "http://localhost:5001/*"
  ]
} 